<Window x:Class="Chord_Dictator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chord_Dictator"
        mc:Ignorable="d"
        Title="Dictator" Height="459" Width="210">
    <Grid>
        <WrapPanel>
            <StackPanel>
                <TextBox x:Name="tbElementName" Height="40" IsReadOnly="True" FontSize="30"/>
                <Image Name="imgElement" Height="200" Width="200"/>
                <Button Name="btnStart" Height="50" Width="200" Click="btnStart_Click" Content="Run"/>
                <TextBox Name="tbDelay" Height="20" ToolTip="Default delay - 10 seconds."/>
                <WrapPanel>
                    <Button x:Name="btnGoToAdd" Click="btnGoToAdd_Click" Content="Edit dictionary content" Width="200" Height="60" Margin="0 10 0 0"/>
                </WrapPanel>
                <Button x:Name="btnChangeInit" Click="btnChangeInit_Click" Content="Change initial file" Width="200" Height="40" Margin="0 0 0 0"/>
            </StackPanel>
        </WrapPanel>
    </Grid>
</Window>